@{
    ViewBag.Title = "recipeList_Home";
    var imageUrlList = (string[]) TempData["imageSource"];
    var beerTitleList = (string[]) TempData["beerName"];
}
@model brewstrWebApp.Models.Recipe

    @Styles.Render("~/Content/Recipe.css")
    @Styles.Render("~/Content/bootstrap/Bootstrap.css")
    @Scripts.Render("~/bundles/sly")

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <!-- Page Content -->
<!-- Static navbar -->
<nav class="navbar navbar-static-top">
    <div class="container-fluid">
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Saved</a></li>
                <li class=""><a href="#">Popular</a></li>
                <li><a href="#">IPA</a></li>
                <li><a href="#">Stouts</a></li>
                <li><a href="#">Porter</a></li>
                <li><a href="#">Summer Brews</a></li>
                <li><a href="#">Cider</a></li>
                <li><a href="#">Wheat</a></li>
            </ul> 
            <div class="col-sm-3 col-md-3 pull-right">
                    <form class="navbar-form" action="../RecipeList/Search" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="search_str">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
            </div>  
        </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
</nav>
<div id="marketplace-wrapper">
    <div id="marketplace-columns">
        @for (var i = 0; i < imageUrlList.Length; i++)
        {
            <div class="recipe" onclick="openRecipe(@Model.id);">
                <img src=@imageUrlList[i] />
                <p>
                    @beerTitleList[i]
                </p>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    function openRecipe(id) {
        $.ajax({
            url: 'urlToController',
            data: { id: id }
        }).done(function () {
            alert('Added');
        });
    }
</script>